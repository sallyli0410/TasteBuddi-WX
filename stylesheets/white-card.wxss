.cards-container {
  width:100%;
}
.card-product {
  overflow: hidden;
  height: 300rpx;
  margin-bottom: 40rpx;
  border-radius: 20rpx;
  color: black;
  background: white;
  box-shadow: 0px 0px 15px #e8e8e8;
  display: flex;
  align-items: center;
  position: relative;
}

.card-product-infos {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 75%;
  position: relative;
  padding: 0rpx 30rpx;
  margin-bottom: 30rpx;
  flex-basis: 60%;
}

.card-product image {
  height: 100%;
  overflow: hidden;
  object-fit: cover;
  flex-basis: 40%;
}

.card-icon {
  height: 23% !important;
  width: 10% !important;
  position: absolute;
  background-size: cover;
  background-repeat: no-repeat;
  z-index: 1;
  top: 15rpx;
  left: 15rpx;
}
